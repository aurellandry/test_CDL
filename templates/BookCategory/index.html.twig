{% extends 'base.html.twig' %}

{% block title %}Catégories de livres{% endblock %}

{% block body %}
    {#{ dump(form) }#}

    {# Titre de la page #}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Listing - Catégories de livres</h1>
        </div>
    </div>

    <div class="row alert alert-warning" role="alert">
        <div class="col-xs-9 col-sm-10"></div>

        <div class="col-xs-3 col-sm-2">
            <a href="{{ path('book_category_add') }}" role="button" class="btn btn-info text-right">
                {{ include('helpers/icon/_fa.html.twig', {'icon': 'plus'}) }} Ajouter
            </a>
        </div>
    </div>

    <div class="container-fluid">
        <table class="table" data-toggle="table" data-pagination="true">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col" data-sortable="true">Nom</th>
                    <th scope="col">Commentaires</th>
                    <th scope="col">Créé le</th>
                    <th scope="col">Modifié le</th>
                    <th scope="col">{# Bouton d'action #}</th>
                </tr>
            </thead>
            <tbody>
                {% for cat in categories %}
                <tr>
                    <th scope="row">
                        {{ cat.id }}
                    </th>
                    <td>
                        <a href="{{ path('book_category_edit', {'id': cat.id}) }}">{{ cat.name }}</a>
                    </td>
                    <td>
                        {{ cat.comments | raw }}
                    </td>
                    <td>
                        {{ cat.createdAt | date("d-m-Y à H:i:s") }}
                    </td>
                    <td>
                        {{ cat.updatedAt | date("d-m-Y à H:i:s") }}
                    </td>
                    <td>
                        <a href="{{ path('book_category_edit', {'id': cat.id}) }}" role="button" class="btn btn-info">Modifier</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block stylesheets %}

{% endblock %}