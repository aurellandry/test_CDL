{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container login-container">
        <h2><i class="fa fa-lock fa-fw"></i> Connexion sécurisée</h2>
        <hr />

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-group margin-top-20">
                <label for="username">Nom d'utilisateur</label>
                <input type="text" value="{{ last_username }}" name="username" id="username" class="form-control" required autofocus>
            </div>

            <div class="form-group margin-top-20">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <div class="form-group margin-top-20 text-align-center">
                <button class="btn btn-lg" style="background-color: #ddd; color: #413C49" type="submit">
                    Se connecter
                </button>
            </div>
            
        </form>
    </div>

{% endblock %}

{% block stylesheets %}
    <style>
        .login-container{
            width: 50%;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #F9F9FA;
            color: #413C49;
            margin-top: 90px;
            padding: 20px 40px 20px 40px;
        }

        .margin-top-20{
            margin-top: 20px
        }

        .text-align-center{
            text-align: center;
        }
    </style>
{% endblock %}

